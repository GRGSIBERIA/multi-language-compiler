{
    "Rigging": {
        "extends": "Chunk",
        "attributes": [
            {
                "name": "nodes",
                "class": "Array",
                "extends": "Node"
            },
            {
                "name": "iks",
                "class": "Array",
                "extends": "IK"
            },
            {
                "name": "controllers",
                "class": "Array",
                "extends": "Controller"
            },
            {
                "names": "constraints",
                "class": "Array",
                "extends": "Constraint"
            }
        ]
    },
    "RigBase": {
        "attributes": [
            {
                "name": "digest", 
                "class": "Digest"
            },
            {
                "name": "position",
                "class": "Vector3"
            }
        ]
    },
    "Node": {
        "extends": "RigBase"
    },
    "IK": {
        "extends": "RigBase",
        "attributes": [
            {
                "name": "iterations",
                "class": "DWord",
                "comments": [
                    "IKの計算回数"
                ]
            },
            {
                "name": "limitation_radian",
                "class": "Float",
                "comments": [
                    "IKの計算1回あたりの制限確度, ラジアン"
                ]
            }
        ]
    },
    "Controller": {
        "extends": "RigBase",
        "attributes": [
            {
                "name": "rotation",
                "class": "Quaternion"
            }
        ]
    },
    "Constraint": {
        "attributes": [
            {
                "name": "constraint_type",
                "class": "Byte",
                "comments": [
                    "0: Parent",
                    "1: Orient",
                    "2: Point",
                    "3: Aim",
                    "4: Pole Vector"
                ]
            },
            {
                "name": "constraint_to",
                "class": "Byte",
                "comments": [
                    "ikは厳密にはcontroller扱い",
                    "0: bone",
                    "1: node",
                    "2: ik",
                    "3: controller"
                ],
                "attentions": [
                    "以下の拘束は禁止",
                    "bone -> ik",
                    "bone -> controller",
                    "node -> bone"
                ]
            },
            {
                "name": "instance",
                "class": "ConstraintBase",
                "comments": [
                    "instanceの中身はconstraint_typeに準じる"
                ]
            }
        ]
    }
}